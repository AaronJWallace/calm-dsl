{%- macro simple_date_var(obj) -%}
{%- if obj.regex %}
{{obj.name}} = CalmVariable.Simple.date('{{obj.value}}', label='{{obj.label}}',regex='{{obj.regex}}', validate_regex={{obj.validate_regex}}, runtime={{obj.runtime}})
{%- else %}
{{obj.name}} = CalmVariable.Simple.date('{{obj.value}}', label='{{obj.label}}', runtime={{obj.runtime}})
{%- endif %}
{%- endmacro %}

{{ simple_date_var(obj) }}
