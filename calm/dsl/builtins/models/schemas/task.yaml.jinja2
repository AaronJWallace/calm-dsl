{% macro Task() -%}

title: Task
type: object
x-calm-dsl-type: app_task
properties:
  name:
    type: string
  description:
    type: string
  type:
    type: string
  target_any_local_reference:
    $ref: '#/components/schemas/Ref'
  attrs:
    type: object
    additionalProperties: true
    x-calm-dsl-type: dict
  target_type:
    description: Type of the target
    type: string
  category:
    description: Category key value for the task
    type: string
  child_tasks_local_reference_list:
    type: array
    items:
      $ref: '#/components/schemas/Ref'
  variable_list:
    x-calm-dsl-display-name: variables
    type: array
    items:
      $ref: '#/components/schemas/Variable'

{%- endmacro %}


{% macro TaskSchema() -%}

Task:
  {{ Task()|indent(2) }}

{%- endmacro %}
