{% macro VmwGCLinuxSpec() -%}

title: Guest Customization Linux data
type: object
x-calm-dsl-type: object
properties:
  hostname:
    type: string
  domain:
    type: string
  timezone:
    type: string
  hw_utc_clock:
    type: boolean
  dns_primary:
    type: string
  dns_secondary:
    type: string
  dns_tertiary:
    type: string
  dns_search_path:
    type: array
    items:
      type: string
  network_settings:
    type: array
    items:
      {{ VmwGCNetworkSetting() | indent(6) }}

