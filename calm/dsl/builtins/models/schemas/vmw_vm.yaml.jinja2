{% macro VmwGCWindowsSpec() -%}

title: Guest Customization Windows data
type: object
x-calm-dsl-type: object
properties:
  computer_name:
    type: string
  product_id:
    type: string
  full_name:
    type: string
  organization_name:
    type: string
  workgroup:
    type: string
  timezone:
    type: string
  is_domain:
    type: boolean
  domain:
    type: string
  domain_user:
    type: string
  command_list:
    type: array
    items:
      type: string
  dns_primary:
    type: string
  dns_secondary:
    type: string
  dns_tertiary:
    type: string
  dns_search_path:
    type: array
    items:
      type: string
  network_settings:
    type: array
    items:
      {{ VmwGCNetworkSetting() | indent(6) }}
  auto_logon:
    type: boolean
    default: False
  login_count:
    type: integer
    default: 1
  password:
    type: object
    x-calm-dsl-type: object
    properties:
      attrs:
        type: object
        x-calm-dsl-type: object
        properties:
          is_secret_modified:
            type: boolean
            default: False
          secret_reference:
            type: object
            x-calm-dsl-type: object
            default: {}
      value:
        type: string
  domain_password:
    type: object
    x-calm-dsl-type: object
    properties:
      attrs:
        type: object
        x-calm-dsl-type: object
        properties:
          is_secret_modified:
            type: boolean
            default: False
          secret_reference:
            type: object
            x-calm-dsl-type: object
            default: {}
      value:
        type: string

{%- endmacro %}


{% macro VmwGuestCustomization() -%}

title:  VMWARE Guest Customization
type: object
x-calm-dsl-type: vmw_vm_gc
properties:
  customization_type:
    type: string
    enum:
    - GUEST_OS_LINUX
    - GUEST_OS_WINDOWS
  cloud_init:
    type: string
  customization_name:
    type: string
  linux_data:
    {{ VmwGCLinuxSpec() | indent(4) }}
  windows_data:
    {{ VmwGCWindowsSpec() | indent(4) }}

{%- endmacro %}


{% macro VmwVMResources() -%}

title: VMWARE Resources
type: object
x-calm-dsl-type: vmw_vm_resources
properties:
  account_uuid:
    type: string
    minLength: 36
    maxLength: 36
  num_vcpus_per_socket:
    type: integer
    default: 0
  num_sockets:
    type: integer
    default: 0
  memory_size_mib:
    type: integer
    default: 0
  power_state:
    type: string
    default: poweron
  nic_list:
    x-calm-dsl-display-name: nics
    type: array
    items:
      {{ VmwNic() | indent(6) }}
  disk_list:
    x-calm-dsl-display-name: disks
    type: array
    items:
      {{ VmwDisk() | indent(6) }}
  controller_list:
    type: array
    x-calm-dsl-display-name: controllers
    items:
      {{ VmwController() | indent(6) }}
  template_nic_list:
    type: array
    x-calm-dsl-display-name: template_nics
    items:
      {{ VmwTemplateNic() | indent(6) }}
  template_disk_list:
    type: array
    x-calm-dsl-display-name: template_disks
    items:
      {{ VmwTemplateDisk() | indent(6) }}
  template_controller_list:
    type: array
    x-calm-dsl-display-name: template_controllers
    items:
      {{ VmwTemplateController() | indent(6) }}
  guest_customization:
    {{ VmwGuestCustomization() | indent(4) }}

{%- endmacro %}


{% macro VmwVm() -%}

title: VMWare CreateSpec
type: object
x-calm-dsl-type: vmw_vm
properties:
  name:
    type: string
  type:
    type: string
    enum:
    - PROVISION_VMWARE_VM
    default: PROVISION_VMWARE_VM
  drs_mode:
    type: boolean
    default: False
  cluster:
    type: string
  template:
    type: string
  storage_pod:
    type: string
  host:
    type: string
  datastore:
    type: string
  clone_is_template:
    type: boolean
    default: False
  resources:
    {{ VmwVMResources() | indent(4) }}

{%- endmacro %}

